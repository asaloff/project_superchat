<div class="box col-sm-6 col-sm-offset-3" >
  <h3 id="messages-title">Messages</h3>
  <div id="messages-scroller">
    {{#if messages}}
      {{#each messages as |message|}}
        {{addHr ../messages message}}
        {{> message}}
      {{/each}}
    {{else}}
      <h4 id="no-message-alert">There are no messages yet. You can add one below.</h4>
    {{/if}}
  </div>

  <div>
    <hr>
    <form id="new-message-form" class="form-inline clearfix" method="POST">
      <label class="sr-only" for="message">New Message</label>
      <div class="form-group col-sm-9" id="textarea-message">
        <textarea rows="1" type="text" class="form-control" id="message" placeholder="New Message" name="message" required></textarea>
      </div>
      <input type="submit" class="btn btn-default" value="Send"></input>
    </form>
  </div>
</div>
